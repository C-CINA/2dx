#!/bin/bash
#
# remove all the files generated by CMake 
#

################################################################################
# Remove Cache Files 
################################################################################
rm CmakeCache.txt
rm -rf bin/CMakeFiles
rm -rf plugins/CMakeFiles
rm -rf /Users/marheit/code/2dx/trunk/lib/src/conf/CMakeFiles
rm -rf ./2dx_image/CMakeFiles
rm -rf ./2dx_logbrowser/CMakeFiles
rm -rf ./2dx_merge/CMakeFiles
rm -rf ./bin/CMakeFiles
rm -rf ./CMakeFiles
rm -rf ./CMakeFiles/CMakeTmp/CMakeFiles
rm -rf ./include/CMakeFiles
rm -rf ./plugins/CMakeFiles
rm -rf ./tools/cmake/CMakeFiles
rm -rf ./tools/cmake/CMakeFiles/CMakeTmp/CMakeFiles

################################################################################
# Remove QT generated MOC Files 
################################################################################
rm  2dx_image/moc_*
rm  2dx_merge/moc_*
rm  2dx_logbrowser/moc_*

################################################################################
# Remove Bundles 
################################################################################
rm -rf 2dx_image/2dx_image.app
rm -rf 2dx_merge/2dx_merge.app
rm -rf 2dx_logbrowser/2dx_logbrowser.app
