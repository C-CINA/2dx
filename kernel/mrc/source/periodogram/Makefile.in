CXX=@CXX@
CFLAGS= -w -ffast-math -DUSE_THREADS_2DX @CPPFLAGS@
SOURCES=main.cpp
LDIR = -L../../lib/ -L../../lib64
LIB=-lfftw3f -l2dx -lpthread
BIN=../../bin/
EXE = 2dx_periodogram.exe
INCLUDES = -I../../include/

all: $(BIN)/$(EXE)

$(BIN)/$(EXE): $(SOURCES)
	$(CXX) $(CFLAGS) $(INCLUDES) -o $(BIN)/$(EXE) $(SOURCES) $(INCLUDES) $(LDIR) $(LIB)
clean:
	\rm -f $(BIN)/$(EXE) *~


distclean:
	\rm -f Makefile
