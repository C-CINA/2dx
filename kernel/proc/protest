#!/bin/csh -ef
#
#
if ( $#argv != 1 ) then
  echo protest : display protest text, and abort
  echo \\t usage: protest \<text\>
  echo \\t example: protest \"ERROR: Imagefile does not exist.\"
else
  echo " "
  echo ":#######################################################################################################################"
  echo "::#######################################################################################################################"
  echo "::#### $1 #################################################################################################################" | cut -c1-121
  echo "::#######################################################################################################################"
  echo ":#######################################################################################################################"
  echo " "
  exit -1
endif
#

