#!/bin/sh
#---------------------------------------------------------------------
# script to upload a file on the status website 
#---------------------------------------------------------------------
#
if [ $# -lt 4 ]
then
	echo "Error in reading arguments"
	echo "Usage: "
        echo "`basename $0:` <cadaver_executable> <server_url> <microscope> <status_dir>" >&2
	echo "Aborting!"
	exit 1
fi

echo '*############################################################################*'
echo '| Locating the files                                                         |'
echo '*============================================================================*'
echo '|                                                                            |'
#
CADAVER=$1
URL=$2
MICROSCOPE=$3
STATUSDIR=$4
#
if [ ! -d $STATUSDIR ]
then
	"Could not locate $STATUSDIR"
	exit 2;
fi
#
echo "Following files will be uploaded"
echo `ls -1 ${STATUSDIR}`
#

echo '|                                                                            |'
echo '*============================================================================*'
echo ''
echo ''
echo ''
echo ''


echo '*############################################################################*'
echo '| Uploading the files                                                        |'
echo '*============================================================================*'
echo '|                                                                            |'
#
sort -r ${STATUSDIR}/data.txt | head -n 100 > ${STATUSDIR}/sortdata.txt
#
${CADAVER} ${URL} <<EOT
delete html/thumbnails/${MICROSCOPE}/*.png
delete html/thumbnails/${MICROSCOPE}/*.jpg
delete html/logs/${MICROSCOPE}.backup
move html/logs/${MICROSCOPE}.log html/logs/${MICROSCOPE}.backup
lcd ${STATUSDIR}
put last.txt html/logs/${MICROSCOPE}.last
put last_imported.txt html/logs/${MICROSCOPE}.last_imported
put last_processed.txt html/logs/${MICROSCOPE}.last_processed
put last_errors.txt html/logs/${MICROSCOPE}.last_errors
put mean.txt html/logs/${MICROSCOPE}.mean
put resolution.txt html/logs/${MICROSCOPE}.resolution
put defocus.txt html/logs/${MICROSCOPE}.defocus
put drift.txt html/logs/${MICROSCOPE}.drift
put sortdata.txt html/logs/${MICROSCOPE}.log
cd html/thumbnails/${MICROSCOPE}/
mput *.png
mput *.jpg
quit
EOT


echo '|                                                                            |'
echo '*============================================================================*'
echo ''
echo ''
echo ''
echo ''

